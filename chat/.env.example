# Application Settings
APP_NAME="Ocular Triage Chat"
ENVIRONMENT=development
DEBUG=true
APP_PORT=8000

# Database (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=triage_chat
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/triage_chat

# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# LLM Providers
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
PRIMARY_LLM_PROVIDER=anthropic
PRIMARY_LLM_MODEL=claude-3-5-sonnet-20241022
FALLBACK_LLM_PROVIDER=openai
FALLBACK_LLM_MODEL=gpt-4o

# Langfuse (Observability)
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_HOST=https://cloud.langfuse.com

# Chainlit
CHAINLIT_AUTH_SECRET=changeme
CHAINLIT_ALLOW_ORIGINS=http://localhost:8000,http://localhost:3000

# Redis (optional)
REDIS_PORT=6379

# Safety & Compliance
MAX_SESSION_DURATION_MINUTES=30
REQUIRE_CONSENT=true
ENABLE_RED_FLAG_DETECTION=true
LOG_ALL_INTERACTIONS=true

# Performance
MAX_TOKENS_PER_REQUEST=4096
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3

# Docker Build
BUILD_TARGET=development
