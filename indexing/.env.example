# Neo4j Configuration (Required)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Custom OpenAI Configuration for Graphiti LLM operations (Required)
# Can use custom endpoints (e.g., local LLM, Azure OpenAI)
CUSTOM_OPENAI_BASE_URL=https://api.openai.com/v1
CUSTOM_OPENAI_API_KEY=your_openai_api_key_here
CUSTOM_OPENAI_MODEL=gpt-4

# OpenAI Embedding Configuration (Required if using OpenAI embeddings)
# Uses OPENAI_API_KEY if not specified separately
OPENAI_EMBEDDING_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_BASE_URL=https://api.openai.com/v1

# Alternative: Use standard OPENAI_API_KEY for both Graphiti and embeddings
OPENAI_API_KEY=your_openai_api_key_here

# Embedding Provider Configuration
EMBEDDING_PROVIDER=openai  # "openai" or "sentence-transformers"
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_BATCH_SIZE=100  # Larger batches for OpenAI (100), smaller for sentence-transformers (32)

# Optional: Sentence Transformers (BioBERT) Configuration
# Only needed if EMBEDDING_PROVIDER=sentence-transformers
# SENTENCE_TRANSFORMERS_MODEL=pritamdeka/BioBERT-mnli-snli-scinli-scitail-mednli-stsb
# EMBEDDING_BATCH_SIZE=32

# Indexing Configuration (Optional)
BATCH_SIZE=10
MAX_WORKERS=4
LOG_LEVEL=INFO
