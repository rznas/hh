{
  "version": "1.0",
  "description": "Configuration for choosing between baseline and LLM extraction outputs",
  "default_mode": "baseline",
  "modes": {
    "baseline": {
      "description": "Use pattern-matching baseline extraction (faster, no API costs)",
      "cost": "free",
      "speed": "fast"
    },
    "llm": {
      "description": "Use LLM-enhanced extraction (higher quality, API costs)",
      "cost": "paid",
      "speed": "slower"
    },
    "hybrid": {
      "description": "Use LLM outputs where available, fallback to baseline",
      "cost": "paid (partial)",
      "speed": "medium"
    },
    "merged": {
      "description": "Merge both outputs with LLM preferred for conflicts",
      "cost": "paid",
      "speed": "fast (post-processing)"
    }
  },
  "entity_sources": {
    "anatomy": {
      "baseline": "phase2/anatomy.json",
      "llm": "phase2/anatomy_llm.json",
      "active_mode": "baseline"
    },
